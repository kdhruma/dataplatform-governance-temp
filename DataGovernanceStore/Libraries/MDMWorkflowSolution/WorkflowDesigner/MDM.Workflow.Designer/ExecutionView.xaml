      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:custom="clr-namespace:DockingLibrary;assembly=DockingLibrary" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="ExecutionView" ShowsNavigationUI="False">

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="Auto" />

            <RowDefinition Height="32"/>
            
            <RowDefinition Height="268*" />
            
        </Grid.RowDefinitions>

        <Button Content="View Execution" Height="23" Name="btnReplayExecutionView" Click="btnReplayExecutionView_Click" Background="SteelBlue" Foreground="White" FontWeight="Bold" Margin="13,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="102" Grid.Row="1" />

        <custom:DockManager Name ="dockManager" Grid.Row="2">
        </custom:DockManager>

    </Grid>
</Page>
